//13) Faça um algoritmo que leia três notas de um aluno, calcule e escreva a média final deste aluno. Considerar que a 
//média é ponderada e que o peso das notas é 2, 3 e 5. Fórmula para o cálculo da média final é:
//n1 * 2 + n2 * 3 + n3 * 5 mediafinal = ----------------------------------- 10
package ExercicioFacct;
import java.util.Scanner;

public class Exercicio13 {

	public static void main(String[] args) {
		Scanner sc = new Scanner(System.in);
		 
		System.out.println("Digite o valor da 1ª Nota: ");
		float nota1 = sc.nextFloat();
		System.out.println("Digite o valor da 2ª Nota: ");
		float nota2 = sc.nextFloat();
		System.out.println("Digite o valor da 2ª Nota: ");
		float nota3 = sc.nextFloat();
		
		float mediapond = nota1 * 2 + nota2 * 3 + nota3 * 5;
		float medialfinal = mediapond / 10;
 
		System.out.println("\nA média final do aluno é:  " +medialfinal);
		
		sc.close();
			
	}
 
}
 
